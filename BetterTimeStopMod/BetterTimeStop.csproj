<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>

		<!-- For Windows users, please fill the folder path which contains Duckov.exe below -->
		<!-- Windows 用户请在下面这行填写你的鸭科夫安装路径（包含 Duckov.exe 的目录），这样编译器就能找到相关的 dll 文件 -->
		<DuckovPath>D:\steam\steamapps\common\Escape from Duckov\</DuckovPath>
	</PropertyGroup>
	<ItemGroup>
		<Reference Include="$(DuckovPath)\Duckov_Data\Managed\TeamSoda.*"/>
		<Reference Include="$(DuckovPath)\Duckov_Data\Managed\ItemStatsSystem.dll"/>
		<Reference Include="$(DuckovPath)\Duckov_Data\Managed\Unity*"/>
	</ItemGroup>
	<ItemGroup>
		<!-- 排除反编译文件夹，这些只是参考代码，不应该参与编译 -->
		<Compile Remove="Decompiled\**" />
		<EmbeddedResource Remove="Decompiled\**" />
		<None Include="Decompiled\**" />
	</ItemGroup>
</Project>